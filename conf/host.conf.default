#!/bin/bash
# Hosting Configuration stored as bash environment variables

# Hostname
#------------------------------------------------------------------------------- 
HOST="DEFAULT_HOST"
VANITY="DEFAULT_VANITY"
VANITY_HOST="$VANITY.$HOST"

# MySQL/MariaDB 
#------------------------------------------------------------------------------- 
DB_NAME="DEFAULT_DB_NAME"
DB_USER="DEFAULT_DB_USERNAME"
DB_PASS="DEFAULT_DB_PASSWORD"
DB_HOST="DEFAULT_DB_HOST"
DB_CHARSET="utf8mb4"

# HTTP Service
#------------------------------------------------------------------------------- 
HTTP_USER="apache"

# Paths
#------------------------------------------------------------------------------- 
declare -a PATH_BACKUP_IGNORE=(
  "archive/db/*"
  "archive/tar/*"
  "logs/*.log"
)

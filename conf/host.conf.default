#!/bin/bash
# Hosting Configuration stored as bash environment variables

# Hostname
#------------------------------------------------------------------------------- 
PATH_ROOT="/www"
HOST="BS_DEFAULT_HOST"
VANITY="BS_DEFAULT_VANITY"
VANITY_HOST="$VANITY.$HOST"

# MySQL/MariaDB 
#------------------------------------------------------------------------------- 
DB_NAME="BS_DEFAULT_DB_NAME"
DB_USER="BS_DEFAULT_DB_USERNAME"
DB_PASS="BS_DEFAULT_DB_PASSWORD"
DB_HOST="BS_DEFAULT_DB_HOST"
DB_CHARSET="utf8mb4"

# HTTP Service
#------------------------------------------------------------------------------- 
HTTP_USER="BS_DEFAULT_HTTP_USER"

# Paths
#------------------------------------------------------------------------------- 
declare -a PATH_BACKUP_IGNORE=(
  "archive/tar/*"
  "archive/db/*"
  "logs/*.log"
)
